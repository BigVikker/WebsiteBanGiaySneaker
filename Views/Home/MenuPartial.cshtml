<div class="header_agileits">
    <div class="logo">
        <h1><a class="navbar-brand"><span>Yugo</span> <i>Shoes</i></a></h1>
    </div>
    <div class="overlay overlay-contentpush">
        <button type="button" class="overlay-close"><i class="fa fa-times" aria-hidden="true"></i></button>

        <nav>
            <ul>
                <li>@Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "active" })</li>
                <li>@Html.ActionLink("Cửa hàng", "Index", "CuaHang", null, new { @class = "active" })</li>
                @if (Session["Userkh"] != null)
                {
                    <li>Xin chào @Session["Userkh"].ToString()</li>
                    <li>@Html.ActionLink("Đăng xuất", "DangXuat", "KhachHang", null, new { @class = "active" })</li>
                }
                else
                {
                    <li>@Html.ActionLink("Đăng nhập", "DangNhap", "KhachHang", null, new { @class = "active" })</li>
                    <li>@Html.ActionLink("Đăng ký", "DangKy", "KhachHang", null, new { @class = "active" })</li>
                }
                <li>@Html.ActionLink("Giới thiệu", "GioiThieu", "CuaHang", null, new { @class = "active" })</li>
            </ul>
        </nav>
    </div>
    <div class="mobile-nav-button">
        <button id="trigger-overlay" type="button"><i class="fa fa-bars" aria-hidden="true"></i></button>
    </div>
    <!-- cart details -->
    @*Chèn giỏi hàng partial*@
    @Html.Action("GioHangPartial", "GioHang")
    <!-- //cart details -->
    <!-- search -->
    <div class="search_w3ls_agileinfo">
        <div class="cd-main-header">
            <ul class="cd-header-buttons">
                <li><a class="cd-search-trigger" href="#cd-search"> <span></span></a></li>
            </ul>
        </div>
        <div id="cd-search" class="cd-search">
            @using (Html.BeginForm("KQTimKiem", "TimKiem", FormMethod.Post))
            {
                <input name="txtTimKiem" type="search" placeholder="Nhập từ khóa cần tìm...">
            }
        </div>
    </div>
    <!-- //search -->
    <br />
    <div>@ViewBag.TenKH </div>

    <div class="clearfix"></div>
</div>
